script AquasHideout_1F_OnResume {
    setdivewarp(MAP_UNDERWATER_AQUAS_HIDEOUT_1F, 10, 11)
    end    
}

script AquasHideout_1F_EventScript_Mart {
    lock
    faceplayer
    message(format("Hey psst... Wanna buy something?\p"))
    waitmessage
    pokemart(AquasHideout_1F_Mart)
    msgbox("Please Come Again.")
    release
    end
}

