mapscripts SacredIslandNorth_MapScripts {
    MAP_SCRIPT_ON_LOAD: SacredIslandNorth_EventScript_OnLoad
}

script SacredIslandNorth_EventScript_OnLoad {
    if(!flag(FLAG_DEFEATED_GROUDON))
    {
        setweather(WEATHER_DROUGHT)
        doweather
    }   
    end 
}

script SacredIslandNorth_EventScript_RichBoy1 {
    trainerbattle_single(TRAINER_RICH_BOY_SI_NORTH_1, SacredIslandNorth_Text_RichBoy1_Intro, SacredIslandNorth_Text_RichBoy1_Defeat)
    msgbox(SacredIslandNorth_Text_RichBoy1_PostBattle, MSGBOX_AUTOCLOSE)
}

